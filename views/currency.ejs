<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <%-include('layout/head')%>
    <link type="text/css" rel="stylesheet" href="../stylesheets/currency.css">
    <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
    <link type="text/css" rel="stylesheet" href="../stylesheets/table-currency.css">
    <title>Currency Conversion</title>
</head>
<body>
<%-include('layout/header')%>
<section class="input-convert">
    <div class="container">
        <div class="title text-left">
            <h2><%=amount%> <%=data[unitFrom].KiHieu%> to <%=data[unitTo].KiHieu%> = <%=amount*(data[unitFrom].TiLe/data[unitTo].TiLe)%> <%=data[unitTo].KiHieu%></h2>
        </div>
        <div class="wrap">
            <div class="row">
                <div class="col-lg-12 col-md-12 ">
                    <form id="from-convert" method="get" action="/Currency/Convert" class="form-group wrap-form">
                        <div class="row">
                            <div class='col-lg-3 col-md-12 wrap-input'>
                                <label class="lable">
                                    Amount
                                </label>
                                <input id="amount" class="input-field form-control" name="amount" type="text" value="<%=amount%>">
                            </div>
                            <div class='col-lg-3 col-md-12 wrap-input'>
                                <label class="lable">
                                    From
                                </label>
                                <div class="name-option">
                                    <div class="wrap-img">
                                        <img src="<%=data[unitFrom].QuocKi%>"  style="border-radius: 100%;width: 40px;height: 40px;float: left;">
                                    </div>
                                    <div class="text-name-option current-code"><span style="font-size: 1.5em;font-weight: 600;line-height: 20%"><%=data[unitFrom].KiHieu%></span></div>
                                    <div class="text-name-option current-name"><span><%=data[unitFrom].TenDonVi%></span></div>
                                    <div class="dropdown-arrow">
                                        <div aria-hidden="true" class="css-onlf42-indicatorContainer converterform-dropdown__indicator converterform-dropdown__dropdown-indicator">
                                            <svg aria-hidden="true" data-id="icon-chevron-down" viewBox="0 0 12 9" color="#002272" height="9px" width="12px">
                                                <path fill="currentColor" d="M1.41.84L6 5.42 10.59.84 12 2.25l-6 6-6-6z"></path>
                                            </svg>
                                        </div>
                                    </div>
                                </div>
                                <div class="dropdown">
                                    <ul class="dropdown-menu">
                                        <%data.map((e) => {%>
                                        <li class="dropdown-item">
                                            <a href="javascript:void(0)" class="dropdown-item-1">
                                                <div class="name-option-1" style="top:5%; left: 6%">
                                                    <div class="wrap-img">
                                                        <img src="<%=e.QuocKi%>"  style="border-radius: 100%;width: 40px;height: 40px;float: left;">
                                                    </div>
                                                    <div class="text-name-option current-code" ><span style="font-size: 1.5em;font-weight: 600;line-height: 20%"><%=e.KiHieu%></span></div>
                                                    <div class="text-name-option current-name"><span><%=e.TenDonVi%></span></div>
                                                </div>
                                            </a>
                                        </li>
                                        <%})%>
                                    </ul>
                                </div>
                                <input id="from" class="input-field select-unit form-control" name="from" type="text" value="<%=data[unitFrom].KiHieu%>">
                            </div>

                            <button id="inverseButton" aria-label="Invert currencies" class="btn-exchange col-lg-1" type="button">
                                <svg aria-hidden="true" data-id="icon-exchange" viewBox="0 0 50 47" height="32px" width="30px">
                                    <path fill="currentColor" fill-rule="evenodd" d="M49.897 35.977L26.597 25v7.874H7.144v6.207h19.455v7.874zM.103 11.642l23.3 10.977v-7.874h19.454V8.538H23.402V.664z"></path>
                                </svg>
                            </button>

                            <div class='col-lg-3 col-md-12 wrap-input'>
                                <label class="lable">
                                    To
                                </label>
                                <div class="name-option">
                                    <div class="wrap-img">
                                        <img src="<%=data[unitTo].QuocKi%>"  style="border-radius: 100%;width: 40px;height: 40px;float: left;">
                                    </div>
                                    <div class="text-name-option current-code"  ><span style="font-size: 1.5em;font-weight: 600;line-height: 20%"><%=data[unitTo].KiHieu%></span></div>
                                    <div class="text-name-option current-name"><span><%=data[unitTo].TenDonVi%></span></div>
                                    <div class="dropdown-arrow">
                                        <div aria-hidden="true" class="css-onlf42-indicatorContainer converterform-dropdown__indicator converterform-dropdown__dropdown-indicator">
                                            <svg aria-hidden="true" data-id="icon-chevron-down" viewBox="0 0 12 9" color="#002272" height="9px" width="12px">
                                                <path fill="currentColor" d="M1.41.84L6 5.42 10.59.84 12 2.25l-6 6-6-6z"></path>
                                            </svg>
                                        </div>
                                    </div>
                                </div>
                                <div class="dropdown">
                                    <ul class="dropdown-menu">
                                        <%data.map((e) => {%>
                                        <li class="dropdown-item">
                                            <a href="javascript:void(0)" class="dropdown-item-1">
                                                <div class="name-option-1" style="top:5%; left: 6%">
                                                    <div class="wrap-img">
                                                        <img src="<%=e.QuocKi%>"  style="border-radius: 100%;width: 40px;height: 40px;float: left;">
                                                    </div>
                                                    <div class="text-name-option current-code" ><span style="font-size: 1.5em;font-weight: 600;line-height: 20%"><%=e.KiHieu%></span></div>
                                                    <div class="text-name-option current-name"><span><%=e.TenDonVi%></span></div>
                                                </div>
                                            </a>
                                        </li>
                                        <%})%>
                                    </ul>
                                </div>
                                <input id="to" class="input-field select-unit form-control" name="to" type="text" value="<%=data[unitTo].KiHieu%>">
                            </div>

                            <button class="btn-submit btn-exchange col-lg-2 col-md-12" color="yellow" radius="large" type="submit" aria-label="Convert">
                                <svg style="width: 100%;height: 100%;" aria-hidden="true" data-id="icon-chevron-right" viewBox="0 0 8 13" color="#002272"><path fill="currentColor" d="M.59 11.34l4.58-4.59L.59 2.16 2 .75l6 6-6 6z"></path></svg>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="display-amount-input text-center col-lg-12 col-md-12">
                    <div class="display-amount-text">
                        <span class="number-input"><span id="user-input"><%=amount%></span> <span class="amount-unit"><%=data[unitFrom].KiHieu%>  = </span></span>
                    </div>
                    <div class="display-amount-text">
                        <span class="number-result"><%=amount*(data[unitFrom].TiLe / data[unitTo].TiLe)%> <span class="amount-unit"> <%=data[unitTo].KiHieu%></span></span>
                    </div>
                </div>
                <div class="one-unit-conversion">
                    <div class="text-center">1 <span><%=data[unitFrom].KiHieu%></span> = <%=data[unitFrom].TiLe / data[unitTo].TiLe%> <%=data[unitTo].KiHieu%></div>
                    <div class="text-center">1 <span><%=data[unitTo].KiHieu%></span> = <%=data[unitTo].TiLe / data[unitFrom].TiLe%> <%=data[unitFrom].KiHieu%></div>
                    <div class="text-unit text-unit-left">FROM <span><%=data[unitFrom].KiHieu%></span> TO <span><%=data[unitTo].KiHieu%></span></div>
                    <div class="text-unit text-unit-right">Last Update: 2020-09-14 02:05 GMT+7</div>
                </div>
            </div>
        </div>
    </div>
</section>
<%-include('layout/conversionRate-table')%>
<section class="content">
    <div class="container">
        <div class="wrap-content">
            <div class="row">
                <div class="col-lg-5 col-md-12 table-cal">
                    <div class="title-table text-center">
                        <h3>Convert <%=data[unitFrom].KiHieu%> to <%=data[unitTo].KiHieu%></h3>
                    </div>
                    <table class="table">
                        <thead>
                            <th class="text-left col-left"><%=data[unitFrom].KiHieu%></th>
                            <th class="text-left col-right"><%=data[unitTo].KiHieu%></th>
                        </thead>
                        <tbody>
                        <%for(let i = 0; i <= 10 ; i++){let number = 1%>
                        <%if (i === 0)  number = 1;
                            if (i === 1)  number = 5;
                            if (i === 2)  number = 10;
                            if (i === 3)  number = 25;
                            if (i === 4)  number = 50;
                            if (i === 5)  number = 100;
                            if (i === 6)  number = 500;
                            if (i === 7)  number = 1000;
                            if (i === 8)  number = 5000;
                            if (i === 9)  number = 10000;
                            if (i === 10)  number = 50000;
                        %>
                            <tr>
                                <th class="text-left col-left set-text"><%=number%> <%=data[unitFrom].KiHieu%></th>
                                <th class="text-left col-right set-text"><%=((data[unitFrom].TiLe / data[unitTo].TiLe)*number).toPrecision(12)%> <%=data[unitTo].KiHieu%> </th>
                            </tr>
                        <%}%>
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-5 col-md-12 table-cal">
                    <div class="title-table text-center">
                        <h3>Convert <%=data[unitTo].KiHieu%> to <%=data[unitFrom].KiHieu%></h3>
                    </div>
                    <table class="table">
                        <thead>
                        <th class="text-left col-left"><%=data[unitTo].KiHieu%></th>
                        <th class="text-left col-right"><%=data[unitFrom].KiHieu%></th>
                        </thead>
                        <tbody>
                        <%for(let i = 0; i <= 10 ; i++){let number = 1%>
                        <%if (i === 0)  number = 1;
                            if (i === 1)  number = 5;
                            if (i === 2)  number = 10;
                            if (i === 3)  number = 25;
                            if (i === 4)  number = 50;
                            if (i === 5)  number = 100;
                            if (i === 6)  number = 500;
                            if (i === 7)  number = 1000;
                            if (i === 8)  number = 5000;
                            if (i === 9)  number = 10000;
                            if (i === 10)  number = 50000;
                        %>
                        <tr>
                            <th class="text-left col-left set-text"><%=number%> <%=data[unitTo].KiHieu%></th>
                            <th class="text-left col-right set-text"><%=((data[unitTo].TiLe / data[unitFrom].TiLe)*number).toPrecision(12)%> <%=data[unitFrom].KiHieu%></th>
                        </tr>
                        <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<%-include('layout/footer')%>
<script type="text/javascript" src="../javascripts/ExchangeRate.js"></script>
<script type="text/javascript" src="../javascripts/convert-currency.js"></script>
</body>
</html>